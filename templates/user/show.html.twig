{% extends 'Backbase.html.twig' %}

{% block title %} Admin {% endblock %}

{% block nomdepage %}
    <h6>Manage Users</h6>
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}
    <a href="{{ path('add') }}" class="btn btn-success float-end"> Add user </a>
    
    <div class="container-xl">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.getFormattedRoles() }}</td>
                            <td>
                                <a href="{{ path('edit', {'id': user.id}) }}" class="btn btn-success">Update</a>
                                <a href="{{ path('remove', {'id': user.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de supprimer cet utilisateur?')">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
